<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_form_inherit">
            <field name="name">product.template.common.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="string">List Price</attribute>
                </xpath>

                <xpath expr="//page[@name='general_information']/group" position="after">
                    <group col="4" colspan="2">

                        <field name="tariff_cost" invisible="1"/>
                        <field name="vendor_discounted" invisible="1"/>
                        <field name="fob_total" invisible="1"/>
                        <field name="profit_margin" invisible="1"/>

                        <field name="cost"/>

                        <label for="tariff"/>
                        <div class="o_row">
                            <field name="tariff"/>
                            <span>%%</span>
                        </div>

                        <label for="vendor_discount"/>
                        <div class="o_row">
                            <field name="vendor_discount"/>
                            <span>%%</span>
                        </div>

                        <!--                         <field name="admin_fee" invisible="1"/> -->

                        <field name="admin_fee"/>

                        <label for="margin"/>
                        <div class="o_row">
                            <field name="margin"/>
                        </div>

                    </group>

                </xpath>
            </field>
        </record>
    </data>
</odoo>