<odoo>
  <data>
    <record model="ir.ui.view" id="purchase_order_form_inherit">
      <field name="name">purchase.order.form.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="/form/sheet/group/group[2]" position="after">
              <group>
                <field name="client_id" widget="res_partner_many2one" context="{'res_partner_search_mode':'customer', 'show_vat': True}"
                placeholder="Name, TIN, Email, or Reference"
                />
              </group>
              <group>
                <field name="courier_id" widget="res_partner_many2one" context="{'show_vat': True}"
                placeholder="Name, TIN, Email, or Reference"
                />
              </group>
          </xpath>
      </field>
    </record>
  </data>
</odoo>